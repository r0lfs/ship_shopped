<div class="job card blue-grey lighten-5 z-depth-3">
	<% if job.user.id == current_user.id %>
		<div class="edit">
			<%= link_to '<i class="tiny material-icons">edit</i>'.html_safe, edit_job_path(job) %>
		</div>
	<% end %>

	<div class="title">
		<b> Title: </b> <br>
		<%= job.job_name %>
	</div>
		
	<div class="description">
		<p><b>Details: </b> <br>
			<%= job.description %>
		</p>
	</div>

	<div class="details">
		<ul>
			<li><b>Contract Offer From:</b><br>
				<%= link_to job.user.username, user_path(job.user) %>
			</li>
			<li><b>Cost: </b><%= job.cost %></li>
			<li><b>Containers Required: </b><%= job.containers %></li>
			<li><b>Origin: </b><%= job.origin %></li>
			<li><b>Destination: </b><%= job.destination %></li>
		</ul>
	</div>

	<div class="current_ships">
		<% if @contracted.where(job_id: job.id).exists? %>
			<b>Ships Currently Contracted for this Job: </b>
			<ul>
				<% @contracted.where(job_id: job.id).all.each do |contract| %>
					<% if @all_boats.where(id: contract.boat_id).exists? %>
	          <li><%= @all_boats.find_by(id: contract.boat_id).ship_name %>
	            <% if @all_boats.find_by(id: contract.boat_id).user_id == current_user.id %>
	              <%= link_to '<i class="tiny material-icons">cancel</i>'.html_safe, contract, method: :delete %>
	            <% end %>
	          </li>
	        <% end %>
        <% end %>
			</ul>
		<% else %>
			<b>There Currently no Ships Contracted for this Job</b>
		<% end %>
	</div>

	<div class="bid">
		<% if @boats.where(location: job.origin).exists? and @boats.where(under_contract: false).exists? %>
			<%= render :partial => 'jobs/contract_form', locals: {job: job} %>
		<% end %>
	</div>
	<% if job.user.id == current_user.id %>
		
		<button>
			<%= link_to "Cancel Job", job, method: :delete %>
		</button>
	<% end %>

</div>

