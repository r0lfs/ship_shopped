<div class="boat">
	<div class="title">
		<b> Ship Name: </b> <br>
			<%= boat.ship_name %>
	</div>
	<% if boat.avatar? %>
		<%= image_tag boat.avatar.url(:thumb) %>
	<% end %>
	<div class="description">
			<ul>
				<li><b>Current Location:</b> <br>
				<%= boat.location  %></li>
				<li><b>Capacity: </b><%= boat.containers %> Containers</li>
			</ul>
	</div>
	<% if boat.user.id == current_user.id %>
		
		<button>
			<%= link_to "Remove Ship From Fleet", boat, method: :delete %>
		</button>
	<% end %>

</div>