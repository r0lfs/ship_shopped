<%= form_with model: @contract, url: contracts_path, scope: 'contract', id: 'new-contract', remote: true do |f| %>
	<%= f.hidden_field :job_id, :value => job.id %>
	<%= f.select(:boat_id) do %>
  	<option value="" disabled selected>Ships</option>
  	
		<% @boats.where(location: job.origin).each do |boat| %>
			<% if boat.under_contract == false %>
				<option value="<%= boat.id %>"><%= boat.ship_name %></option>
			<% end %>
   	<% end %>
  <% end %>
	<%= f.submit "Assign Boat", :class => "btn waves-effect waves-light blue-grey darken-3"%>

<% end %>